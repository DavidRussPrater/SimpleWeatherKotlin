<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient_day"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/detail_today_primary"
                    layout="@layout/detail_today_primary"/>

                <include
                    android:id="@+id/today_hourly_forecast"
                    layout="@layout/detail_today_hourly"/>

                <include
                    android:id="@+id/detail_today_secondary"
                    layout="@layout/detail_today_secondary"/>

                <include
                    android:id="@+id/detail_today_sun"
                    layout="@layout/detail_today_sun"/>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>



</layout>
